<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical" android:background="#00000000"
                                                   android:backgroundTint="#00000000">


    <TextView
            android:layout_width="380dp"
            android:layout_height="68dp"
            android:id="@+id/textViewName" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="32dp" tools:text="Username" android:textColor="#00FFFFFF"/>
    <TextView
            android:text="Assists"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:id="@+id/textView2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="20dp" android:gravity="center"
            android:textColor="#00FFFFFF"/>
    <TextView
            android:text="Kills"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:id="@+id/textView3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="8dp" android:gravity="center" android:textSize="25dp"
            android:textColor="#00FFFFFF"/>
    <TextView
            android:text="Wins"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:id="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textViewKills"
            android:gravity="center" android:textSize="25dp" android:textColor="#00FFFFFF"/>
    <TextView
            android:text="Losses"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:id="@+id/textView17"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textViewAssists"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:gravity="center"
            android:textSize="25dp" android:textColor="#00FFFFFF"/>
    <TextView
            android:layout_width="182dp"
            android:layout_height="168dp"
            android:id="@+id/textViewKills" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:gravity="center" android:textSize="32dp" tools:text="1000"
            android:textColor="#00FFFFFF"/>
    <TextView
            android:layout_width="182dp"
            android:layout_height="168dp"
            android:id="@+id/textViewLosses"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:textSize="32dp"
            tools:text="1000" android:textColor="#00FFFFFF"/>
    <TextView
            android:layout_width="182dp"
            android:layout_height="168dp"
            android:id="@+id/textViewWins"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16" android:gravity="center" android:textSize="32dp"
            tools:text="1000" android:textColor="#00FFFFFF"/>
    <TextView
            android:layout_width="182dp"
            android:layout_height="168dp"
            android:id="@+id/textViewAssists" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:gravity="center" android:textSize="32dp" tools:text="1000"
            android:textColor="#00FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>